<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var banners = getRepoDetailsByName("Time to 69 Banner").images;
            var first_banner = banners[0];
            renderGeneral('#time_banner','#banner_template',banners);

            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            prefix = get_prefix();
            var pages_json = prefix + "/pages/billings-event-updates.json"
            $.getJSON(pages_json).done(function(data) {
                $('#updates_page_title').html(data.title.toUpperCase());
                $('#updates_page_desc').html(data.body);
    
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            });
        
            var pages_json = prefix + "/pages/billings-about-us.json"
            $.getJSON(pages_json).done(function(data) {
                $('#about_page_title').html(data.title.toUpperCase());
                $('#about_page_desc').html(data.body);
                $('#about_page_image').attr('src', data.image_url);
                
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            });
            
            
            var pages_json = prefix + "/pages/billings-concert.json"
            $.getJSON(pages_json).done(function(data) {
                const image = data.image_url;
                $('#concert_page_title').html(data.title.toUpperCase());
                $('#concert_page_desc').html(data.body);
                $('#concert_page_image').attr('src', data.image_url);
    
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            });
            
            const workshopImages = getRepoDetailsByName("Workshop Images").images;
            renderGeneral('#workshops_container','#workshop_template',workshopImages);
            
             var pages_json = prefix + "/pages/billings-event-details.json"
            $.getJSON(pages_json).done(function(data) {
                const image = data.image_url;
                $('#event_details_page_title').html(data.title.toUpperCase());
                $('#event_details_page_desc').html(data.body);
                $('#event_details_page_image').attr('src', data.image_url);
    
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            });
            
            const formBanner = getRepoDetailsByName("Time to 69 Form Banner").images;
            const firstBanner = formBanner[0].image_url;
            console.log(firstBanner)
            $('.contact_banner').css('background-image', 'url(' + firstBanner + ')');
            
            show_content();
            
             $('#contact_form').submit(function(e) {
                e.preventDefault();
                 $.ajax({
                    url : "//mallmaverick.com/send_contact_email",
                    type: "POST",
                    data : { 
                        'send_to': "stephanie@mobilefringe.com", 
                        'subject': "Bridge Through Time", 
                        'body': {
                            "Name": $('#full_name').val(), 
                            "Email Adddress": $('#email').val(), 
                            "Message": $('#message').val()
                        } 
                    },
                    success: function(data, textStatus, jqXHR) {
                    alert("success");
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                    alert("fail");
                    }
                }); 
    		});
        }
        loadMallDataCached(renderAll); 
    });
</script>